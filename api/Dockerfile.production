FROM node:20.5.0-alpine3.18 AS builder

WORKDIR /home/app

COPY ./package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Final image
FROM node:20.5.0-alpine3.18
WORKDIR /home/app
COPY --from=builder /home/app/dist ./dist
COPY --from=builder /home/app/package*.json ./
RUN npm install --omit=dev

EXPOSE 5000
CMD ["node", "dist/entrypoint.js"]