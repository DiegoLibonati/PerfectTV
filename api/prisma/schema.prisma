generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Channel {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  thumbUrl    String
  url         String   @unique
  urlRest     String?
  number      Int      @unique
  idType      Int
  idCategory  Int
  idSource    Int
  category    Category @relation(fields: [idCategory], references: [id])
  type        Type     @relation(fields: [idType], references: [id])
  source      Source   @relation(fields: [idSource], references: [id])
}

model Type {
  id          Int       @id @default(autoincrement())
  code        String    @unique
  description String
  channels    Channel[]
}

model Category {
  id          Int       @id @default(autoincrement())
  code        String    @unique
  description String    
  channels    Channel[]
}

model Source {
  id          Int       @id @default(autoincrement())
  code        String    @unique
  description String    
  channels    Channel[]
}
